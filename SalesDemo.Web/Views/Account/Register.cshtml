@model RegisterVM
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<!doctype html>
<html lang="en" dir="ltr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Hope UI | Responsive Bootstrap 5 Admin Dashboard Template</title>

    <!-- Favicon -->
    <link rel="shortcut icon" href="~/HopeUi-Dashboard/assets/images/favicon.ico" />

    <!-- Library / Plugin Css Build -->
    <link rel="stylesheet" href="~/HopeUi-Dashboard/assets/css/core/libs.min.css" />


    <!-- Hope Ui Design System Css -->
    <link rel="stylesheet" href="~/HopeUi-Dashboard/assets/css/hope-ui.min.css?v=2.0.0" />

    <!-- Custom Css -->
    <link rel="stylesheet" href="~/HopeUi-Dashboard/assets/css/custom.min.css?v=2.0.0" />

    <!-- Dark Css -->
    <link rel="stylesheet" href="~/HopeUi-Dashboard/assets/css/dark.min.css" />

    <!-- Customizer Css -->
    <link rel="stylesheet" href="~/HopeUi-Dashboard/assets/css/customizer.min.css" />

    <!-- RTL Css -->
    <link rel="stylesheet" href="~/HopeUi-Dashboard/assets/css/rtl.min.css" />


</head>
<body class="dark " data-bs-spy="scroll" data-bs-target="#elements-section" data-bs-offset="0" tabindex="0">
    <!-- loader Start -->
    <div id="loading">
        <div class="loader simple-loader">
            <div class="loader-body"></div>
        </div>
    </div>
    <!-- loader END -->

    <div class="wrapper">
        <section class="login-content">
            <div class="row m-0 align-items-center bg-white vh-100">
                <div class="col-md-6 d-md-block d-none bg-primary p-0 mt-n1 vh-100 overflow-hidden">
                    <img src="~/HopeUi-Dashboard/assets/images/auth/05.png" class="img-fluid gradient-main animated-scaleX" alt="images">
                </div>
                <div class="col-md-6">
                    <div class="row justify-content-center">
                        <div class="col-md-10">
                            <div class="card card-transparent auth-card shadow-none d-flex justify-content-center mb-0">
                                <div class="card-body">
                                    <a href="~/HopeUi-Dashboard/dashboard/index.html" class="navbar-brand d-flex align-items-center mb-3">
                                        <!--Logo start-->
                                        <!--logo End-->
                                        <!--Logo start-->
                                        <div class="logo-main">
                                            <div class="logo-normal">
                                                <svg class="text-primary icon-30" viewBox="0 0 30 30" fill="none" xmlns="http://www.w3.org/2000/svg">
                                                    <rect x="-0.757324" y="19.2427" width="28" height="4" rx="2" transform="rotate(-45 -0.757324 19.2427)" fill="currentColor" />
                                                    <rect x="7.72803" y="27.728" width="28" height="4" rx="2" transform="rotate(-45 7.72803 27.728)" fill="currentColor" />
                                                    <rect x="10.5366" y="16.3945" width="16" height="4" rx="2" transform="rotate(45 10.5366 16.3945)" fill="currentColor" />
                                                    <rect x="10.5562" y="-0.556152" width="28" height="4" rx="2" transform="rotate(45 10.5562 -0.556152)" fill="currentColor" />
                                                </svg>
                                            </div>
                                            <div class="logo-mini">
                                                <svg class="text-primary icon-30" viewBox="0 0 30 30" fill="none" xmlns="http://www.w3.org/2000/svg">
                                                    <rect x="-0.757324" y="19.2427" width="28" height="4" rx="2" transform="rotate(-45 -0.757324 19.2427)" fill="currentColor" />
                                                    <rect x="7.72803" y="27.728" width="28" height="4" rx="2" transform="rotate(-45 7.72803 27.728)" fill="currentColor" />
                                                    <rect x="10.5366" y="16.3945" width="16" height="4" rx="2" transform="rotate(45 10.5366 16.3945)" fill="currentColor" />
                                                    <rect x="10.5562" y="-0.556152" width="28" height="4" rx="2" transform="rotate(45 10.5562 -0.556152)" fill="currentColor" />
                                                </svg>
                                            </div>
                                        </div>
                                        <!--logo End-->




                                        <h4 class="logo-title ms-3">Seyhanlar Satış Takip</h4>
                                    </a>
                                    <h2 class="mb-2 text-center">Hesap Oluştur</h2>
                                    <p class="text-center">Bir Seyhanlar Satış Takip Hesabı Oluşturun.</p>
                                    <form asp-action="Register">
                                        @*method="post"*@
                                        @if (ViewBag.RegisterErrors != null)
                                        {
                                            <div class="alert alert-danger" role="alert">
                                                @foreach (var error in ViewBag.RegisterErrors)
                                                {
                                                    <p>@error</p>
                                                }
                                            </div>
                                        }
                                        <div class="row">
                                         
                                            <div class="col-lg-6">
                                                <div class="form-group">
                                                    <label asp-for="Name" class="form-label">İsim</label>
                                                    <input asp-for="Name" class="form-control" placeholder=" " required>
                                                    <span asp-validation-for="Name" class="text-warning"></span>
                                                </div>
                                            </div>
                                            <div class="col-lg-6">
                                                <div class="form-group">
                                                    <label asp-for="Surname" class="form-label">Soyisim</label>
                                                    <input asp-for="Surname"   class="form-control" placeholder=" " required>
                                                    <span asp-validation-for="Surname" class="text-warning"></span>
                                                </div>
                                            </div>
                                            <div class="col-lg-6">
                                                <div class="form-group">
                                                    <label asp-for="UserName" class="form-label">Kullanıcı Adı</label>
                                                    <input asp-for="UserName"   class="form-control" placeholder=" " required>
                                                    <span asp-validation-for="UserName" class="text-warning"></span>
                                                </div>
                                            </div>
                                          
                                            <div class="col-lg-6">
                                                <div class="form-group">
                                                    <label asp-for="Phone" class="form-label">Telefon Numarası</label>
                                                    <input asp-for="Phone"   class="form-control" placeholder=" " required>
                                                    <span asp-validation-for="Phone" class="text-warning"></span>
                                                </div>
                                            </div>
                                            <div class="col-lg-6">
                                                <div class="form-group">
                                                    <label asp-for="Password" class="form-label">Şifre</label>
                                                    <input asp-for="Password" class="form-control" placeholder=" " required>
                                                    <span asp-validation-for="Password" class="text-warning"></span>
                                                </div>
                                            </div>
                                            <div class="col-lg-6">
                                                <div class="form-group">
                                                    <label asp-for="ConfirmPassword" class="form-label">Şifre Tekrar</label>
                                                    <input asp-for="ConfirmPassword"  class="form-control" placeholder=" " required>
                                                    <span asp-validation-for="ConfirmPassword" class="text-warning"></span>
                                                </div>
                                            </div>
                                            <div class="col-lg-12">
                                                <div class="form-group">
                                                    <label asp-for="CompanyName" class="form-label">Şirket Adı</label>
                                                    <input asp-for="CompanyName"   class="form-control" placeholder=" " required>
                                                    <span asp-validation-for="CompanyName" class="text-warning"></span>
                                                </div>
                                            </div>

                                           @* <div class="col-lg-12 d-flex justify-content-center">
                                                <div class="form-check mb-3">
                                                    <input type="checkbox" class="form-check-input" id="customCheck1">
                                                    <label class="form-check-label" for="customCheck1">I agree with the terms of use</label>
                                                </div>
                                            </div>*@
                                        </div>
                                        <div class="d-flex justify-content-center">
                                            <button type="submit" class="btn btn-primary">Kayıt Ol</button>
                                        </div>


                                        <div class="form-group">

                                        <p class="mt-3 text-center">
                                            Zaten hesabınız var mı? <a  class="text-underline" asp-action="Login">Giriş Yap</a>
                                        </p>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="sign-bg sign-bg-right">
                        <svg width="280" height="230" viewBox="0 0 421 359" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <g opacity="0.05">
                                <rect x="-15.0845" y="154.773" width="543" height="77.5714" rx="38.7857" transform="rotate(-45 -15.0845 154.773)" fill="#3A57E8" />
                                <rect x="149.47" y="319.328" width="543" height="77.5714" rx="38.7857" transform="rotate(-45 149.47 319.328)" fill="#3A57E8" />
                                <rect x="203.936" y="99.543" width="310.286" height="77.5714" rx="38.7857" transform="rotate(45 203.936 99.543)" fill="#3A57E8" />
                                <rect x="204.316" y="-229.172" width="543" height="77.5714" rx="38.7857" transform="rotate(45 204.316 -229.172)" fill="#3A57E8" />
                            </g>
                        </svg>
                    </div>
                </div>
            </div>
        </section>
    </div>

    <!-- Library Bundle Script -->
    <script src="~/HopeUi-Dashboard/assets/js/core/libs.min.js"></script>

    <!-- External Library Bundle Script -->
    <script src="~/HopeUi-Dashboard/assets/js/core/external.min.js"></script>

    <!-- Widgetchart Script -->
    <script src="~/HopeUi-Dashboard/assets/js/charts/widgetcharts.js"></script>

    <!-- mapchart Script -->
    <script src="~/HopeUi-Dashboard/assets/js/charts/vectore-chart.js"></script>
    <script src="~/HopeUi-Dashboard/assets/js/charts/dashboard.js"></script>

    <!-- fslightbox Script -->
    <script src="~/HopeUi-Dashboard/assets/js/plugins/fslightbox.js"></script>

    <!-- Settings Script -->
    <script src="~/HopeUi-Dashboard/assets/js/plugins/setting.js"></script>

    <!-- Slider-tab Script -->
    <script src="~/HopeUi-Dashboard/assets/js/plugins/slider-tabs.js"></script>

    <!-- Form Wizard Script -->
    <script src="~/HopeUi-Dashboard/assets/js/plugins/form-wizard.js"></script>

    <!-- AOS Animation Plugin-->
    <!-- App Script -->
    <script src="~/HopeUi-Dashboard/assets/js/hope-ui.js" defer></script>

</body>
</html>
