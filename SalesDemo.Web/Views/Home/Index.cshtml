                            </div>
                            <div class="mb-4">
                                <div class="flex-wrap d-flex justify-content-between">
                                    <h2 class="mb-2">$405,012,300</h2>
                                    <div>
                                        <span class="badge bg-success rounded-pill">YoY 24%</span>
                                    </div>
                                </div>
                                <p class="text-info">Life time sales</p>
                            </div>
                            <div class="grid-cols-2 d-grid gap-card">
                                <button class="p-2 btn btn-primary text-uppercase">SUMMARY</button>
                                <button class="p-2 btn btn-info text-uppercase">ANALYTICS</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        @*data table*@
        <div class="col-md-12 col-lg-12">
            <div class="row">
                <div class="col-sm-12">
                    <div class="card" data-aos="fade-up" data-aos-delay="800">

                        <div class="card-body">
                            <div class="table-responsive">
                                <table id="datatable" class="table table-striped" data-toggle="data-table">
                                    <thead>
                                        <tr>
                                            <th>Id</th>
                                            <th>Company Name</th>
                                            <th>Phone Number</th>
                                            <th>Total Sale</th>
                                            
                                        </tr>
                                    </thead>
                                   @foreach (var item in Model)
                                    {
                                        <tbody>

                                            <tr>
                                                <td>@item.Company.Id</td>
                                                <td>@item.Company.CompanyName</td>
                                                <td>@item.Company.PhoneNumber</td>
                                                <td>@item.Sale.TotalPrice</td>
                                             
                                            </tr>
                                        </tbody>
                                    }
                                    <tfoot>
                                        <tr>
                                            <th>Id</th>
                                            <th>Company Name</th>
                                            <th>Phone Number</th>
                                            <th>Total Sale</th>


                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>



    </div>
</div>
